doctype html
html(lang='en')
  head
    head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description', content='')
    meta(name='author', content='')
    title E-Surat App
    // Bootstrap core CSS
    link(href=`${pathToAssets}/vendor/bootstrap/css/bootstrap.min.css`, rel='stylesheet')
    <!-- link(href='vendor/bootstrap/css/bootstrap.min.css', rel='stylesheet') -->
    // Custom fonts for this template
    link(rel='stylesheet', href=`${pathToAssets}/vendor/font-awesome/css/font-awesome.min.css`)
    link(rel='stylesheet', href=`${pathToAssets}/vendor/simple-line-icons/css/simple-line-icons.css`)
    link(href=`https://fonts.googleapis.com/css?family=Lato`, rel='stylesheet')
    link(href=`https://fonts.googleapis.com/css?family=Catamaran:100,200,300,400,500,600,700,800,900`, rel='stylesheet')
    link(href=`https://fonts.googleapis.com/css?family=Muli`, rel='stylesheet')
    // Plugin CSS
    link(rel='stylesheet', href=`${pathToAssets}/device-mockups/device-mockups.min.css`)
    // Custom styles for this template
    link(href=`${pathToAssets}/css/new-age.min.css`, rel='stylesheet')
    // Temporary navbar container fix
    style.
      .navbar-toggler {
      z-index: 1;
      }
      @media (max-width: 576px) {
      nav > .container {
      width: 100%;
      }
      }

  body#page-top
    header.masthead
      // Navigation
      nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation', style='background: #262626')
        .container
          // Brand and toggle get grouped for better mobile display
          .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
              
            a.navbar-brand(href='#') E-Surat
              i.fa.fa-envelope-square.fa-fw(style='margin-left:-90px')
            a.navbar-brand(href='#', style='margin-left: 1030px') Logout
          // Collect the nav links, forms, and other content for toggling
          //
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
            <li>
            <a href="#">About</a>
            </li>
            <li>
            <a href="#">Services</a>
            </li>
            <li>
            <a href="#">Contact</a>
            </li>
            </ul>
            </div>
          // /.navbar-collapse
        // /.container
      // Page Content
      .container
        .row
          .col-md-3
            p.lead(style='margin-top: 100px') E-Surat
            .list-group
              a.list-group-item(href='email.pug') Compose
              a.list-group-item(href='inbox.pug') Inbox
              a.list-group-item(href='outbox.pug') Outbox
          .col-md-9(style='margin-top: 149px')
            .thumbnail
              .caption-full
                form.form-horizontal(style='margin-top: 15px; margin-right: 25px')
                  .form-group
                    label.control-label.col-sm-2(for='email', style='color: #000') To:
                    .col-sm-10
                      input#email.form-control(type='email', placeholder='Enter email to')
                  .form-group
                    label.control-label.col-sm-2(for='pwd', style='color: #000') Message:
                    .col-sm-10
                      textarea#comment.form-control(rows='5', placeholder='Enter message')
                  .form-group
                    .col-sm-offset-2.col-sm-10
                      button.btn.btn-default(type='submit', style='background: #C2185B; color: #fff; font-size: 13px') Send
    
    // jQuery
    script(src='js/jquery.js')
    // Bootstrap Core JavaScript
    script(src='js/bootstrap.min.js')

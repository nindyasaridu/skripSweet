      .container
        .row
          .col-md-3
            p.lead(style='margin-top: 100px') E-Surat
            .list-group
              a.list-group-item(href='email.pug') Compose
              a.list-group-item(href='inbox.pug') Inbox
              a.list-group-item(href='outbox.pug') Outbox
          .col-md-9(style='margin-top: 149px')

doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description', content='')
    meta(name='author', content='')
    title E-Surat App
    // Bootstrap core CSS
    link(href=`/bootstrap-3.3.1/vendor/bootstrap/css/bootstrap.min.css`, rel='stylesheet')
    <!-- link(href='vendor/bootstrap/css/bootstrap.min.css', rel='stylesheet') -->
    // Custom fonts for this template
    link(rel='stylesheet', href=`/bootstrap-3.3.1/vendor/font-awesome/css/font-awesome.min.css`)
    link(rel='stylesheet', href=`/bootstrap-3.3.1/vendor/simple-line-icons/css/simple-line-icons.css`)
    link(href=`https://fonts.googleapis.com/css?family=Lato`, rel='stylesheet')
    link(href=`https://fonts.googleapis.com/css?family=Catamaran:100,200,300,400,500,600,700,800,900`, rel='stylesheet')
    link(href=`https://fonts.googleapis.com/css?family=Muli`, rel='stylesheet')
    // Plugin CSS
    link(rel='stylesheet', href=`/bootstrap-3.3.1/device-mockups/device-mockups.min.css`)
    // Custom styles for this template
    link(href=`/bootstrap-3.3.1/css/new-age.min.css`, rel='stylesheet')
    // Temporary navbar container fix
    style.
      .navbar-toggler {
      z-index: 1;
      }
      @media (max-width: 576px) {
      nav > .container {
      width: 100%;
      }
      }

  body#page-top
    header.masthead
      // Navigation
      nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation', style='background: #262626')
        .container
          // Brand and toggle get grouped for better mobile display
          .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
              
            a.navbar-brand(href='#') E-Surat
              i.fa.fa-envelope-square.fa-fw(style='margin-left:-90px')
            a.navbar-brand(style='color:#fff; margin-left:855px; font-size: 14px') #{login}
            a.navbar-brand(href='/logout') |  Logout
          
      // Page Content
      .container
        .row
          .col-md-3
            p.lead(style='margin-top: 100px') E-Surat
            .list-group
              a.list-group-item(href='/email/compose') Compose
              a.list-group-item(href='/inbox') Inbox
              a.list-group-item(href='/outbox') Outbox
          .col-md-9(style='margin-top: 149px')
            // /.col-lg-8
            .panel.panel-default
              // /.panel-heading
              .panel-body
                table.table.table-striped
                  thead
                    tr
                      th(style='color: #000') Outbox
                      th
                  tbody(style='color: #000')
                    for outbox in outboxList
                      tr(style='height: 49px')
                        form#login.form-horizontal(role='form', action='/outbox/viewOutbox/', method='post')
                        td(style='width: 80%; vertical-align: middle')
                          a(href='/outbox/viewOutbox/'+ outbox.msg_id + '/' + outbox.key_sender, style='text-decoration: none; color: #000; font-family: Serif')
                            i.fa.fa-envelope-o.fa-fw(style='color:#000') &nbsp&nbsp
                            | #{outbox.msg_target}
                        td.text-muted.small(style='vertical-align: middle') #{outbox.msg_time}

                    //- a.list-group-item(href='/outbox/viewOutbox/'+ outbox.msg_id)
                    //-   i.fa.fa-envelope-o.fa-fw
                    //-   |  #{outbox.msg_target}
                    //-   span.pull-right.text-muted.small
                    //-     em #{outbox.msg_time}
                    //- a.list-group-item(href='#')
                    //-   i.fa.fa-envelope-o.fa-fw
                    //-   |  #{outbox.email_to}
                    //-   span.pull-right.text-muted.small
                    //-     em 12 minutes ago
  
    // jQuery
    script(src='/bootstrap-3.3.1/vendor/jquery/jquery.js')
    // Bootstrap Core JavaScript
    script(src='bootstrap-3.3.1/vendor/bootstrap/js/bootstrap.min.js')
